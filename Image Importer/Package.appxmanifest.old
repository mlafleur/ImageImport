<?xml version="1.0" encoding="utf-8"?>
<Package
  xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
  xmlns:mp="http://schemas.microsoft.com/appx/2014/phone/manifest"
  xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
  IgnorableNamespaces="uap mp">
  <Identity Name="45328MassiveScale.ImageImporter" Publisher="CN=MassiveScale" Version="1.1.0.15" />
  <mp:PhoneIdentity PhoneProductId="45328MassiveScale.ImageImporter" PhonePublisherId="00000000-0000-0000-0000-000000000000"/>
  <Properties>
    <DisplayName>Image Importer</DisplayName>
    <PublisherDisplayName>MassiveScale</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
  </Properties>
  <Dependencies>
    <TargetPlatform Name="Windows.Universal" MinVersion="10.0.17134.0" MaxVersionTested="10.0.17134.0" />
  </Dependencies>
  <Resources>
    <Resource Language="x-generate" />
  </Resources>
  <Applications>
    <Application Id="App" Executable="$targetnametoken$.exe" EntryPoint="Image_Importer.App">
      <uap:VisualElements 
        DisplayName="Image Importer" 
        Square150x150Logo="Assets\Logo.png" 
        Square30x30Logo="Assets\SmallLogo.png" Description="Image Importer for Windows 8.1" 
                          ForegroundText="light" BackgroundColor="#83C1FF">
        <uap:DefaultTile ShortName="Image Importer" DefaultSize="wide310x150Logo" Wide310x150Logo="Assets\WideLogo.png">
          <uap:ShowNameOnTiles>
            <uap:ShowOn Tile="square150x150Logo" />
            <uap:ShowOn Tile="wide310x150Logo" />
          </uap:ShowNameOnTiles>
        </uap:DefaultTile>
        <uap:SplashScreen Image="Assets\SplashScreen.png" BackgroundColor="#83C1FF" />
      </uap:VisualElements>
      <Extensions>
        <Extension Category="windows.fileTypeAssociation">
          <FileTypeAssociation Name="image">
            <Logo>Assets\Icon.png</Logo>
            <SupportedFileTypes>
              <uap:FileType>.jpg</uap:FileType>
                <uap:FileType>.jpeg</uap:FileType>
                  <uap:FileType>
                    .tiff</uap:FileType>
                    <uap:FileType>.png</uap:FileType>
                      <uap:FileType>.bmp</uap:FileType>
            </SupportedFileTypes>
          </FileTypeAssociation>
        </Extension>
        <Extension Category="windows.fileTypeAssociation">
          <FileTypeAssociation Name="raw">
            <Logo>Assets\Icon.png</Logo>
            <SupportedFileTypes>
              <FileType>.cr2</FileType>
              <FileType>.arw</FileType>
              <FileType>.raw</FileType>
              <FileType>.orf</FileType>
              <FileType>.crw</FileType>
              <FileType>.nrw</FileType>
            </SupportedFileTypes>
          </FileTypeAssociation>
        </Extension>
        <Extension Category="windows.autoPlayContent">
          <AutoPlayContent>
            <LaunchAction Verb="import" ActionDisplayName="Import Photos" ContentEvent="ShowPicturesOnArrival" />
          </AutoPlayContent>
        </Extension>
      </Extensions>
    </Application>
  </Applications>
  <Capabilities>
    <Capability Name="internetClient" />
    <uap:Capability Name="removableStorage" />
    <uap:Capability Name="picturesLibrary" />
    <DeviceCapability Name="6BDD1FC6-810F-11D0-BEC7-08002BE2092F" />
    <DeviceCapability Name="BA0C718F-4DED-49B7-BDD3-FABE28661211" />
    <DeviceCapability Name="6AC27878-A6FA-4155-BA85-F98F491D4F33" />
  </Capabilities>
</Package>